        <item name="themedShowHideItemBarDrawable">@drawable/show_red</item>
        <item name="themedShowHideIconDrawable">@drawable/ic_show_red</item>
        <item name="themedItemMoveIconDrawable">@drawable/ic_list_red</item>
        <item name="android:statusBarColor">@color/status_bar_color_red</item>
        <item name="android:windowLightStatusBar">false</item>
