<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/status_bar_color_white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/roboto_regular_font</item>
    </style>

    <style name="DefaultFont">
        <item name="android:fontFamily">@font/roboto_regular_font</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
