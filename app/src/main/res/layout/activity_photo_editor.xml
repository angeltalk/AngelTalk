<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activity.PhotoEditorActivity">

    <ImageView
        android:id="@+id/image_capture"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/camera_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blurred_view" />

    <act.sds.samsung.angelman.presentation.custom.FontTextView
        android:id="@+id/picture_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/inform_editing_picture"
        android:textColor="@color/white"
        app:font="@string/font_medium"
        app:layout_marginTopPercent="70%" />

    <ImageView
        android:id="@+id/photo_edit_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/confirm"
        app:layout_marginTopPercent="84%" />

    <ImageView
        android:id="@+id/rotate_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="35dp"
        android:padding="10dp"
        android:src="@drawable/ic_rotate_left" />

</android.support.percent.PercentRelativeLayout>
