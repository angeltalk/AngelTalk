<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_item_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        app:layout_heightPercent="18.75%">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:paddingBottom="20dp"
            android:paddingEnd="20dp"
            android:paddingStart="5dp"
            android:paddingTop="20dp"
            android:src="@drawable/ic_back_arrow" />

        <act.angelman.presentation.custom.FontTextView
            android:id="@+id/category_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:font="@string/font_regular"
            tools:text="먹을 것" />

    </RelativeLayout>

    <act.angelman.presentation.custom.CardViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        app:layout_heightPercent="62.5%" />

</android.support.percent.PercentFrameLayout>