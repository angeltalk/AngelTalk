<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_00"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        app:layout_widthPercent="78.8%"
        app:layout_heightPercent="44.4%"
        app:layout_marginTopPercent="22.5%"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/camera_recode_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <act.angelman.presentation.custom.VideoCardTextureView
            android:id="@+id/camera_recode_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/preview_play_button"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_gravity="center"
            android:alpha="0.5"
            android:src="@drawable/btn_preview"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/camera_recode_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp"
        android:text="@string/video_content_check_guide"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:font="light" />

</android.support.percent.PercentRelativeLayout>