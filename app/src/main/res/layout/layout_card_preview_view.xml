<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_00"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        app:layout_constraintWidth_percent="0.788"
        app:layout_constraintHeight_percent="0.444"
        app:layout_constraintVertical_bias="0.225"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="0dp"
        android:layout_width="0dp">

        <ImageView
            android:id="@+id/camera_recode_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <angeltalk.plus.presentation.custom.VideoCardTextureView
            android:id="@+id/camera_recode_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/preview_play_button"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_gravity="center"
            android:alpha="0.5"
            android:src="@drawable/btn_preview"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/camera_recode_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="160dp"
        android:text="@string/video_content_check_guide"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:fontFamily="@font/roboto_light_font" />

</android.support.constraint.ConstraintLayout>