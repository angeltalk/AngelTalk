<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/camera_gallery_selection_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle"
    tools:context=".presentation.activity.CameraGallerySelectionActivity">

    <act.angelman.presentation.custom.CardTitleLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        app:layout_heightPercent="20%"
        android:layout_alignParentTop="true" />

    <android.support.percent.PercentRelativeLayout
        app:layout_heightPercent="54.7%"
        app:layout_widthPercent="78%"
        android:layout_marginTop="17.5dp"
        android:background="@drawable/rectangle_shape"
        android:elevation="10dp"
        android:layout_below="@id/title_container"
        android:layout_centerHorizontal="true" >

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/text_instruction"
            android:layout_width="match_parent"
            app:layout_heightPercent="28.57%" >

            <TextView
                android:id="@+id/camera_start_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black_99"
                android:textAlignment="center"
                android:textSize="18sp"
                android:text="@string/add_picture"/>
        </android.support.percent.PercentRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/text_instruction"
            android:background="@color/gray_border" />

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/layout_camera"
            android:layout_width="match_parent"
            app:layout_heightPercent="21.14%"
            android:layout_below="@id/text_instruction"
            >

            <ImageView
                android:id="@+id/image_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/themedCameraIconDrawable"
                android:layout_marginStart="33dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/text_take_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black_cc"
                android:textSize="18sp"
                android:text="@string/take_picture"
                android:layout_marginStart="25.5dp"
                android:layout_toEndOf="@id/image_camera"/>
        </android.support.percent.PercentRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/layout_camera"
            android:background="@color/gray_border" />

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/layout_gallery"
            android:layout_width="match_parent"
            app:layout_heightPercent="21.14%"
            android:layout_below="@id/layout_camera">

            <ImageView
                android:id="@+id/image_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/themedGalleryIconDrawable"
                android:layout_marginStart="33dp"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/text_select_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black_cc"
                android:textSize="18sp"
                android:text="@string/select_gallery"
                android:layout_marginStart="25.5dp"
                android:layout_toEndOf="@id/image_gallery"/>

        </android.support.percent.PercentRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/layout_gallery"
            android:background="@color/gray_border" />

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/layout_video"
            android:layout_width="match_parent"
            app:layout_heightPercent="21.14%"
            android:layout_below="@id/layout_gallery">

            <ImageView
                android:id="@+id/image_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/themedVideoIconDrawable"
                android:layout_marginStart="33dp"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/text_take_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black_cc"
                android:textSize="18sp"
                android:text="@string/take_video"
                android:layout_marginStart="25.5dp"
                android:layout_toEndOf="@id/image_video"/>

        </android.support.percent.PercentRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/layout_video"
            android:background="@color/gray_border" />

    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>
