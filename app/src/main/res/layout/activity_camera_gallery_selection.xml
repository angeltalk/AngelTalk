<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/camera_gallery_selection_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle"
    tools:context=".presentation.activity.CameraGallerySelectionActivity">

    <act.sds.samsung.angelman.presentation.custom.CardCategoryTitleRelativeLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        app:layout_heightPercent="18.75%"/>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:background="@drawable/rectangle_shape"
        android:elevation="10dp"
        app:layout_heightPercent="54.75%"
        app:layout_widthPercent="78%">

        <act.sds.samsung.angelman.presentation.custom.FontTextView
            android:id="@+id/camera_start_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32.3dp"
            android:textColor="@color/black_99"
            app:font="@string/font_medium"
            android:textSize="15dp"
            android:text="@string/add_picture"/>
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            app:layout_heightPercent="46%">

            <RelativeLayout
                android:id="@+id/camera_start_card"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                app:layout_widthPercent="50%">

                <ImageView
                    android:id="@+id/camera_start_icon"
                    android:layout_width="30dp"
                    android:layout_height="27dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/ic_camera" />
                <act.sds.samsung.angelman.presentation.custom.FontTextView
                    android:id="@+id/camera_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/camera_start_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="22.3dp"
                    android:textColor="@color/black_99"
                    app:font="@string/font_regular"
                    android:text="@string/camera"
                    android:textSize="16dp" />
            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:background="@color/default_border" />

            <RelativeLayout
                android:id="@+id/gallery_start_card"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                app:layout_widthPercent="50%">

                <ImageView
                    android:id="@+id/gallery_start_icon"
                    android:layout_width="30dp"
                    android:layout_height="27dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/ic_gallery"/>
                <act.sds.samsung.angelman.presentation.custom.FontTextView
                    android:id="@+id/gallery_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gallery_start_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="22.3dp"
                    android:textColor="@color/black_99"
                    app:font="@string/font_regular"
                    android:text="@string/gallery"
                    android:textSize="16dp" />
            </RelativeLayout>
        </android.support.percent.PercentRelativeLayout>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentFrameLayout>
