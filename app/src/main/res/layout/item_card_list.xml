<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/show_hide_item_bar"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:src="?attr/themedShowHideItemBarDrawable" />

    <ImageView
        android:id="@+id/hide_item_bar"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:src="@drawable/hide"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/card_list_horizontal_border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74.4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/card_thumbnail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="18dp"
                android:layout_marginStart="17dp"
                android:scaleType="fitXY"
                android:background="@drawable/rectangle_list_item_shape" />

            <TextView
                android:id="@+id/card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/show_hide_icon"
                android:layout_width="30dp"
                android:layout_height="29dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="11dp"
                android:src="?attr/themedShowHideIconDrawable" />
            <ImageView
                android:id="@+id/hide_icon"
                android:layout_width="30dp"
                android:layout_height="29dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="11dp"
                android:src="@drawable/ic_hide"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_move_icon"
                android:layout_width="50dp"
                android:layout_height="69dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="1dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:src="?attr/themedItemMoveIconDrawable"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/card_list_horizontal_border" />

    </LinearLayout>

</LinearLayout>