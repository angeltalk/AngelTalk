<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/show_hide_item_bar"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:src="@drawable/show_red"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74.7dp"
            android:orientation="horizontal"
            android:gravity="center_vertical" >
            <ImageView
                android:id="@+id/card_thumbnail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/rectangle_list_item_shape"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="18dp" />
            <act.sds.samsung.angelman.presentation.custom.FontTextView
                android:id="@+id/card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:font="@string/font_regular"
                android:textSize="18sp"
                />
            <ImageView
                android:id="@+id/show_hide_icon"
                android:layout_width="30dp"
                android:layout_height="29dp"
                android:src="@drawable/ic_show_red"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="15dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/card_list_horizontal_border" />
    </LinearLayout>
</LinearLayout>