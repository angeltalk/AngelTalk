<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activity.Camera2Activity">

    <TextureView
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/camera_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blurred_view" />

    <TextView
        android:id="@+id/picture_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inform_inside_card_view"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textColor="@color/white"/>

    <FrameLayout
        android:id="@+id/camera_shutter"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_photo_round"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_photo_camera"
            />

    </FrameLayout>
</RelativeLayout>
