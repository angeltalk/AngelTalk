<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/category_item_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <act.sds.samsung.angelman.presentation.custom.CardCategoryLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        app:layout_heightPercent="18.75%"/>

    <act.sds.samsung.angelman.presentation.custom.CardViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        app:layout_heightPercent="62.5%" />

    <RelativeLayout
        android:id="@+id/footer_container"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        app:layout_heightPercent="18.75%">

        <ImageButton
            android:id="@+id/card_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/ic_card_delete"
            android:visibility="gone"/>
    </RelativeLayout>

</android.support.percent.PercentFrameLayout>

